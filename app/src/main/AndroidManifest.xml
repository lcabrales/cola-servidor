<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lucascabrales.colaservidor">

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ParamsActivity"
            android:label="Parámetros de la Simulación"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SimActivity"
            android:label="Simulación"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="Sistema 1 Cola - 1 Servidor"
            android:screenOrientation="portrait"
            android:theme="@style/DrawerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:label="Acerca de Nosotros"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultsActivity"
            android:label="Resultados"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DistributionsActivity"
            android:label="Distribuciones de Probabilidad"
            android:screenOrientation="portrait" />
    </application>

</manifest>